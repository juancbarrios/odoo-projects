<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ***** PLantilla que contiene todo los campos a Imprimir *****-->
<template id="test_template">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <div>
                </div>
                <div class="container">
                  <h1>Reporte PDF</h1>
                </div>
                <div class="row mt32 mb32">
                    <div class="col-xs-2">
                        <strong>Razón Social</strong>:<br/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2">
                        <strong>Rif:</strong>:<br/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2">
                        <strong>Dirección Fiscal</strong>:<br/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2">
                        <strong>Periodo: </strong>
                        <strong><span t-esc="data['form']['periodo_compras_inicio']"/></strong>
                        <span>/</span>
                        <strong><span t-esc="data['form']['periodo_compras_fin']"/></strong>:<br/>
                        <br/>
                    </div>
                </div>
                <!-- ***** Cabecera de la tabla donde se representaran los datos *****-->
                 <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th >
                            <th>Fecha Documento</th>
                            <th>Rif</th >
                            <th>Razon Social</th>
                            <th>Numero</th >
                            <th>Fecha</th>
                            <th>Nro. Planilla Importación (C80-C81)</th >
                            <th>Fecha Planilla Importación</th>
                            <th>Nro. Espediente Importación</th >
                            <th>Nro. Factura</th>
                            <th>Nro. Control</th >
                            <th>Total Compras con IVA</th>
                            <th>Exentas</th >
                            <th>Exoneradas</th>
                            <th>Base Imponible</th >
                            <th>% Alic.</th>
                            <th>Impuesto IVA</th >
                            <th>% Retención</th>
                            <th>IVA Retenido (Vendedor)</th >
                        </tr>
                    </thead>
                    <!-- ***** Cuerpo de la tabla (Datos de las facturas representados) *****-->
                    <tbody>
                        <tr>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                            <td>Test</td>
                        </tr>                    
                     </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</odoo>
